{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "outDir": "./build", // Output compiled JS to build/
    "rootDir": "./src", // Source code will be in src/
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true, // Important for large generated codebases
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "declaration": true, // Generate necessary .d.ts files for consumption
    "declarationMap": true, // Optional: Sourcemaps for declaration files
    "sourceMap": true // Generate source maps for debugging
  },
  "include": ["src/**/*.ts"], // Compile all TS files within the src directory
  "exclude": ["node_modules", "build"] // Exclude dependencies and the output dir
}
