{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "outDir": "./build",
    "rootDir": ".", // Project root relative to tsconfig.json (i.e., src/mcp_hub)
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "sourceMap": true
  },
  "include": ["**/*.ts"], // Include all TS files within rootDir
  "exclude": [
    "node_modules", // Standard exclusion
    "build", // Standard exclusion for output
    "src/core/generated" // Exclude auto-generated code from direct compilation if desired
   ],
  "ts-node": {
    // Configurations for ts-node when running ESM
    "esm": true,
    "experimentalSpecifierResolution": "node"
  }
}
