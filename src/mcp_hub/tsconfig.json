{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "outDir": "./build",
    "rootDir": "./src", // Compile only files under src/mcp_hub/src
    // baseUrl and paths are no longer needed as we import from workspace packages
    // "strict": true, // Temporarily disable strict mode for diagnosing memory issue
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "sourceMap": true
  },
  "include": ["src/**/*.ts"], // Include all TS files within rootDir (now ./src)
  "exclude": [
    "node_modules", // Standard exclusion
    "build", // Standard exclusion for output
    "src/core/generated" // Keep this if it's relevant to the hub's own generation? Or remove if not used. Assuming keep for now.
    // Exclusions for 'd365-client' and 'agents' are removed
   ],
  "ts-node": {
    // Configurations for ts-node when running ESM
    "esm": true,
    "experimentalSpecifierResolution": "node"
  }
}
