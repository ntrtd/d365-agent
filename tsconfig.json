{
  "compilerOptions": {
    "target": "ES2016", // Or a newer version like ES2020, ESNext
    "module": "CommonJS", // Or ESNext, NodeNext depending on your project setup
    "outDir": "./dist", // Example output directory for compiled JS
    "rootDir": "./src", // Example root directory for source files
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true // Often useful to generate .d.ts files
  },
  "include": [
    "src/**/*" // Include source files
, "src/.old/generated"  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts" // Exclude test files
  ]
}
